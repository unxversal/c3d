{
	"name": "c3d",
	"version": "0.0.0",
	"license": "MIT",
	"bin": "dist/cli.js",
	"type": "module",
	"engines": {
		"node": ">=16"
	},
	"scripts": {
		"build": "npm run build:frontend && npm run build:examples && tsc",
		"build:cli": "tsc",
		"build:frontend": "cd ../../frontend && npm ci && npm run build && rm -rf ../cli/c3d/frontend-dist && cp -r dist ../cli/c3d/frontend-dist",
		"build:examples": "rm -rf examples && cp -r ../../examples examples",
		"dev": "tsc --watch",
		"dev:frontend": "cd ../../frontend && npm run dev",
		"test": "prettier --check . && xo && ava"
	},
	"files": [
		"dist",
		"server",
		"frontend-dist",
		"examples"
	],
	"dependencies": {
		"@types/node": "^24.1.0",
		"chalk": "^5.4.1",
		"execa": "^9.6.0",
		"ink": "^4.1.0",
		"meow": "^11.0.0",
		"node-fetch": "^3.3.2",
		"ollama": "^0.5.16",
		"openai": "^5.11.0",
		"react": "^18.2.0",
		"zod": "^3.25.76",
		"zod-to-json-schema": "^3.24.6"
	},
	"devDependencies": {
		"@sindresorhus/tsconfig": "^3.0.1",
		"@types/react": "^18.0.32",
		"@vdemedes/prettier-config": "^2.0.1",
		"ava": "^5.2.0",
		"eslint-config-xo-react": "^0.27.0",
		"eslint-plugin-react": "^7.32.2",
		"eslint-plugin-react-hooks": "^4.6.0",
		"ink-testing-library": "^3.0.0",
		"prettier": "^2.8.7",
		"ts-node": "^10.9.1",
		"typescript": "^5.0.3",
		"xo": "^0.53.1"
	},
	"ava": {
		"extensions": {
			"ts": "module",
			"tsx": "module"
		},
		"nodeArguments": [
			"--loader=ts-node/esm"
		]
	},
	"xo": {
		"extends": "xo-react",
		"prettier": true,
		"rules": {
			"react/prop-types": "off"
		}
	},
	"prettier": "@vdemedes/prettier-config"
}
